<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Artefino</title>
    <%- include("./includes/template_links.ejs") %>
</head>

<body>
    <!-- Header -->
    <%- include("./includes/template_header") %>
        <div class="text-center center-div" id="signup">
            <div class="container w-25 py-5">
                <div class="title pb-3">
                    <h2 class="font-weight-bold">Signup</h2>
                    <!-- Display form validation and submission errors here -->
                    <div id="error-messages" style="color: red;">
                        <%=(typeof message!=='undefined' )?message:""%>
                    </div>
                </div>

                <form action="" method="post" id="signup-form">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control" id="name" name="name" required
                            value="<%= typeof formData !== 'undefined' ? formData.name : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="mobile">Mobile</label>
                        <input type="tel" class="form-control" id="mobile" name="mobile" required
                            value="<%= typeof formData !== 'undefined' ? formData.mobile : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control" id="email" name="email" required
                            value="<%= typeof formData !== 'undefined' ? formData.email : '' %>">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="form-group">
                        <label for="confPassword">Confirm Password</label>
                        <input type="password" class="form-control" id="confPassword" name="confPassword" required>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-success rounded-pill">Signup</button>
                </form>
            </div>
        </div>

        <%- include("./includes/template_footer") %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
                crossorigin="anonymous"></script>
</body>

</html>